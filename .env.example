# ==============================================================================
# Hytale Server Configuration
# ==============================================================================
# Copy this file to .env and customize your settings:
#   cp .env.example .env
#
# Note: Values with spaces work correctly (no quotes needed in .env files)

# Server Identity
SERVER_NAME=My Hytale Server
SERVER_PASSWORD=

# Player Settings
MAX_PLAYERS=10
VIEW_DISTANCE=10

# Memory (MB) - Adjust based on your system
MEMORY_MB=4096

# Authentication Mode: authenticated, open
# - authenticated: Players must have valid Hytale accounts
# - open: No authentication required (for testing only)
AUTH_MODE=authenticated

# Update Behavior: auto, always, never
# - auto: Check for updates and download if newer version available
# - always: Force download on every container start
# - never: Never download (must have files already)
UPDATE_MODE=auto

# Java AOT Caching for faster startup (true/false)
# First startup will be slower as it builds the cache
ENABLE_AOT=true

# Skip hytale-downloader self-update check (true/false)
SKIP_UPDATE_CHECK=false

# Discord Webhook for auth notifications (optional)
# When set, authentication links are sent to Discord if running non-interactively
# This allows you to authenticate even when running with `docker compose up -d`
# Get a webhook URL from: Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=
